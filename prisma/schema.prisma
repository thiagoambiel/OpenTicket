// Prisma schema for Open Ticket (SQLite)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  location    String?
  date        DateTime
  bannerUrl   String?
  inviteLimit Int?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  invites     Invite[]
  promoters   EventPromoter[]
}

model Invite {
  code           String       @id @default(uuid())
  event          Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId        String
  recipientEmail String
  recipientId    String?
  nickname       String?
  status         String       @default("issued")
  createdAt      DateTime     @default(now())
  usedAt         DateTime?
}

model EventPromoter {
  id        String   @id @default(cuid())
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  userId    String?
  email     String
  createdAt DateTime @default(now())

  @@unique([eventId, email])
}
